{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.*"]
}
